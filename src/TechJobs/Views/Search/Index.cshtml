<h1>@ViewBag.title</h1>

<form action="/Search/Results">
    <h2>Search by:</h2>

    <p>
        @foreach (KeyValuePair<string, string> column in ViewBag.columns)
        {
            <span>
                <input type="radio"
                       name="searchType"
                       id="@column.Key"
                       value="@column.Key" 
                       checked="@column.Key == 'all''"/>
                <label for="@column.Key">@column.Value</label>
            </span>
        }
    </p>

    <p>
        <label for="searchTerm">Keyword:</label>
        <input type="text" name="searchTerm" id="searchTerm" />
    </p>

    <input type="submit" value="Search" />
</form>

<hr />

@if (ViewBag.jobs != null)
{

    <h3>@ViewBag.jobs.Count Result(s)</h3>


    @foreach(var job in ViewBag.jobs)
    {
        <div class="list-group">
            <a href="#" class="list-group-item">
                <h4 class="list-group-item-heading">@job["name"]</h4>
                <p class="list-group-item-text">
                   <ul>
                        <li>Type: @job["position type"]</li>
                        <li>Employer: @job["employer"]</li>
                        <li>Core Competency: @job["core competency"]</li>
                   </ul>
                </p>
            </a>
        </div>
    }
    // TODO #2 - Loop over jobs dictionary and display all job fields 
}